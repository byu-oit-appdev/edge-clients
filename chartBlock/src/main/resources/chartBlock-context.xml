<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:c="http://www.springframework.org/schema/c"
	   xmlns:p="http://www.springframework.org/schema/p"
	   xsi:schemaLocation="
		http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		">

	<bean id="accountCodeValidationClient" class="edu.byu.chartblock.impl.AccountCodeValidationImpl"
			c:baseUrl="https://ws.byu.edu/soap/v2.0/generalledger/controls/chartblock"
			c:filter-ref="chartBlockNonceEncodingFilter"
			c:readTimeout="10000"/>

	<bean id="sharedSecretCredentialResolver" class="edu.byu.security.hmac.DaoSharedSecretCredentialResolver"
		  c:credentialDAO-ref="sharedSecretCredentialDAO" />

	<bean id="edgeApiKeyCredentialResolutionRequest" class="edu.byu.security.hmac.PersonIdCredentialResolutionRequest"
		  c:personId="820285322" />

	<bean id="chartBlockNonceEncodingFilter" class="edu.byu.security.hmac.jersey.NoActorSharedSecretNonceEncodingFilter"
		  c:credentialResolver-ref="sharedSecretCredentialResolver"
		  c:resolutionRequest-ref="edgeApiKeyCredentialResolutionRequest"
		  c:nonceDAO-ref="nonceDAO" />
</beans>