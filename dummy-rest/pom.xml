					<version>${framework.decorator.version}</version>
					<type>war</type>
					<scope>runtime</scope>
				</dependency>
				<dependency>
					<groupId>cglib</groupId>
					<artifactId>cglib-nodep</artifactId>
					<version>${cglib.version}</version>
					<scope>runtime</scope>
				</dependency>
			</dependencies>
			<build>
				<resources>
					<resource>
						<directory>${basedir}/src/main/resources</directory>
					</resource>
					<resource>
						<directory>${basedir}/src/main/localResources</directory>
					</resource>
				</resources>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-war-plugin</artifactId>
						<version>2.2</version>
						<configuration>
							<overlays>
								<overlay>
									<groupId>edu.byu.web</groupId>
									<artifactId>web-decorator-local-overlay</artifactId>
									<excludes>
										<exclude>WEB-INF/lib/cglib*</exclude>
										<exclude>WEB-INF/lib/commons-collections*</exclude>
										<exclude>WEB-INF/lib/commons-logging*</exclude>
										<exclude>WEB-INF/lib/ehcache*</exclude>
										<exclude>WEB-INF/lib/hibernate*</exclude>
										<exclude>WEB-INF/lib/security-core-1.2.0.0*</exclude>
										<exclude>WEB-INF/lib/slf4j*</exclude>
										<exclude>WEB-INF/lib/spring*</exclude>
										<exclude>WEB-INF/classes/decorator-hibernate-ehcache.xml</exclude>
										<exclude>WEB-INF/lib/aspectj*</exclude>
									</excludes>
								</overlay>
							</overlays>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>keytool-maven-plugin</artifactId>
						<version>1.0</version>
						<executions>
							<execution>
								<phase>generate-resources</phase>
								<id>clean</id>
								<goals>
									<goal>clean</goal>
								</goals>
							</execution>
							<execution>
								<phase>generate-resources</phase>
								<id>genKey</id>
								<goals>
									<goal>genkey</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<keystore>${project.build.outputDirectory}/jetty-ssl.keystore</keystore>
							<dname>cn=localhost.byu.edu</dname>
							<keypass>jetty7</keypass>
							<storepass>jetty7</storepass>
							<alias>jetty7</alias>
							<keyalg>RSA</keyalg>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.mortbay.jetty</groupId>
						<artifactId>jetty-maven-plugin</artifactId>
						<version>7.4.2.v20110526</version>
						<configuration>
							<stopKey>stopKey</stopKey>
							<stopPort>9999</stopPort>
							<jettyConfig>${project.build.testOutputDirectory}/jetty-web.xml</jettyConfig>
							<connectors>
								<connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
									<port>8080</port>
								</connector>
								<connector implementation="org.eclipse.jetty.server.ssl.SslSocketConnector">
									<port>8443</port>
									<keystore>${project.build.outputDirectory}/jetty-ssl.keystore</keystore>
									<password>jetty7</password>
									<keyPassword>jetty7</keyPassword>
								</connector>
							</connectors>
							<systemProperties>
								<systemProperty>
									<name>byu.logdir</name>
									<value>${java.io.tmpdir}</value>
								</systemProperty>
								<systemProperty>
									<name>byu.app.stage</name>
									<value>DEV</value>
								</systemProperty>
								<systemProperty>
									<name>spring.profiles.active</name>
									<value>tomcat,dev</value>
								</systemProperty>
							</systemProperties>
							<scanIntervalSeconds>3</scanIntervalSeconds>
							<webAppConfig>
								<contextPath>/ccc-intake</contextPath>
							</webAppConfig>
						</configuration>
						<dependencies>
							<dependency>
								<groupId>opensymphony</groupId>
								<artifactId>sitemesh</artifactId>
								<version>2.4.2</version>
							</dependency>
							<dependency>
