<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:cache="http://www.springframework.org/schema/cache"
		xmlns:c="http://www.springframework.org/schema/c"
		xmlns:p="http://www.springframework.org/schema/p"
		xsi:schemaLocation="
		http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/cache   http://www.springframework.org/schema/cache/spring-cache-3.1.xsd
		">

	<cache:annotation-driven cache-manager="controlDatesClientCacheManager" />

	<bean id="controlDatesClientCacheManager" class="org.springframework.cache.ehcache.EhCacheCacheManager"
			p:cacheManager-ref="controlDatesClientEhcache" />

	<bean id="controlDatesClientEhcache" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean"
			p:shared="true"
			p:configLocation="classpath:/edge/controlDatesClient/controlDatesClientEhcache.xml" />

</beans>
